@page "/compteur"

<PageTitle>Compteur</PageTitle>

<h1>Compteur</h1>


<MudText Typo="Typo.h6">MudBlazor est @Text</MudText>
<MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="ButtonOnClick">@ButtonText</MudButton>

@code {
    public string Text { get; set; } = "?";
    public string ButtonText { get; set; } = "Cliquez";
    public int ButtonClicked { get; set; }

    void ButtonOnClick()
    {
        ButtonClicked += 1;
        Text = $"Incroyable x {ButtonClicked}";
        ButtonText = "Cliquez encore";
    }
}
